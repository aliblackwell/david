{
  "firebase": "david-ionic",
  "public": "dist",
  "ignore": [
    "firebase.json",
    "**/.*",
    "**/node_modules/**"
  ],
  "headers": [ {
    "source" : "**/*.@(jpg|jpeg|gif|png)",
    "headers" : [ {
      "key" : "Cache-Control",
      "value" : "max-age=0"
    } ]
    }, {
    "source" : "**/*.@(js|css|html)",
    "headers" : [ {
      "key" : "Cache-Control",
      "value" : "max-age=0, no-store, no-cache, must-revalidate"
    } ]
  } ]
}
